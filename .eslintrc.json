{
  "extends": [
    "airbnb-base"
  ],
  "rules": {
    "no-mixed-operators": [
        "error",
        {
            "groups": [
                ["&", "|", "^", "~", "<<", ">>", ">>>"],
                ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
                ["&&", "||"],
                ["in", "instanceof"]
            ],
            "allowSamePrecedence": true
        }
    ],
    "no-console": 0,
    "indent": [ "error", "tab" ],
    "no-tabs": 0,
    "no-plusplus": [ "error", { "allowForLoopAfterthoughts": true } ],
    "no-unused-expressions": [ "error", { "allowTernary": true } ]
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "script"
  }
}
